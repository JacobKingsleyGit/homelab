apiVersion: k3d.io/v1alpha5
kind: Simple
metadata:
  name: {{ k3d_cluster_name }}
servers: 1
agents: 2
kubeAPI:
  host: "{{ k3d_hostname }}"
  hostIP: "{{ k3d_api_host_ip }}"
  hostPort: "{{ k3d_api_port }}"
network: {{ k3d_docker_network }}
ports:
  - port: "8080:80"
    nodeFilters:
      - loadbalancer
  - port: "8443:443"
    nodeFilters:
      - loadbalancer
options:
  k3s:
    extraArgs:
      - arg: "--tls-san={{ k3d_hostname }}"
        nodeFilters:
          - server:0
